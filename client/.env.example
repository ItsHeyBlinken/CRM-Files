/**
 * Client Environment Variables Template
 * 
 * This file contains all the environment variables needed for the CRM platform client.
 * Copy this file to .env and update the values with your actual configuration.
 * 
 * Configuration Categories:
 * - API endpoints and configuration
 * - Application settings and metadata
 * - Feature flags and toggles
 * - External service integrations
 * - Image and file handling
 * - Pagination settings
 * - Cache configuration
 * - Socket.io configuration
 * 
 * @author CRM Platform Team
 * @version 1.0.0
 */

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=CRM Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A comprehensive Customer Relationship Management platform

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=false
VITE_ENABLE_REAL_TIME=true

# External Services
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Image Configuration
VITE_MAX_IMAGE_SIZE=10485760
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Document Configuration
VITE_MAX_DOCUMENT_SIZE=10485760
VITE_ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain,text/csv

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_ENABLE_CACHE=true

# Socket.io Configuration
VITE_SOCKET_URL=http://localhost:3000